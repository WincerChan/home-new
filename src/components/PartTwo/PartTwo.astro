---
import SvgBackground from "../shared/SvgBackground";
import Footer from "./Copyright.astro";
import Footprint from "./DigitalFootprint";
import Portfolio from "./PortfolioCarousel";
---

<SvgBackground client:visible position={"bottom"} {...Astro.props} />
<div class=":: bg-sliverSand absolute top-full z-30 w-full">
    <div
        class=":: w-full px-6 md:px-0 overflow-x-hidden md:w-[40rem] lg:w-[44rem] 2xl:w-[48rem] mx-auto bg-sliverSand"
    >
        <Footprint {...Astro.props} />
        <Portfolio client:visible {...Astro.props} interval={5} />
        <Footer />
    </div>
</div>
