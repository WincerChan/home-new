---
import PartOne from "../components/PartOne/PartOne.astro";
import PartTwo from "../components/PartTwo/PartTwo.astro";

import "@fontsource/varela-round";
import { loadAllSvgs, loadConfig } from "../compile_utils.js";
import "../style.css";

const config = loadConfig();
const svgs = loadAllSvgs();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="referrer" content="same-origin" />
		<title>{config.name.base}</title>
		<meta name="description" content={config.description} />
		<!-- Open Graph tags -->
		<meta property="og:title" content={config.name.base} />
		<meta property="og:description" content={config.description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={config.websiteUrl} />
		<meta property="og:image" content={config.avatar} />
		<!-- Twitter Card tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={config.name.base} />
		<meta name="twitter:description" content={config.description} />
		<meta name="twitter:image" content={config.avatar} />
	</head>
	<body class="bg-slateGray font-rounded">
		<PartOne config={config} svgAsset={svgs} />
		<PartTwo config={config} svgAsset={svgs} />
	</body>
</html>
